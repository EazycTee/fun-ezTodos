.header {
  padding: 2rpx 18rpx 14rpx;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  background-color: #eee;
   box-shadow: 0 0 1px 1px rgba(0,0,0,.2); 
  box-sizing: border-box;
}

.headerInner {
  display: flex;
  align-items: center;
  background-color: #fff;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
  box-sizing: border-box;
  box-shadow: inset 1rpx 1rpx 1rpx 1rpx #eee;
  padding: 0rpx 25rpx;
}

.header .plus {
  width: 45rpx;
  height: 45rpx;
  margin-right: 12rpx;
  padding: 15rpx 0;
}

.header .new-todo {
  flex: 1;
  height: 75rpx;
  line-height: 75rpx;
}

.header .remove {
  margin-left: 12rpx;
}

.container {
  margin-top: 100rpx;
}

.todos .item {
  display: flex;
  box-sizing: border-box;
  align-items: center;
  margin: 15rpx 0;
  padding: 25rpx;
  border-radius: 10rpx; 
  border: 1rpx solid #ddd; 
  box-shadow: 0 0 1rpx 1rpx #eee; 
  background-color: #f5f5f5;
}

.todos .item .checkbox {
  margin-right: 20rpx;
}

.todos .item .name {
  flex: 1;
  color: #444;
  margin-right: 20rpx;
}

.todos .item.completed .name {
  text-decoration: line-through;
  color: #888;
}

.footer {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
  /* font-size: 26rpx; */
  color: #999;
}

.footer .btn {
  cursor: pointer; 
  text-align: center;
  width: 100%;
  background-color: #eee;
  padding: 25rpx;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.empty .title {
  margin: 200rpx 50rpx 50rpx;
  color: #444;
}

.empty .content {
  color: #666;
  text-align: center;
}
